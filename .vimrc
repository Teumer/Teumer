syntax enable

" Appearance
colorscheme solarized
set background=dark

" tabs
set tabstop=4
set shiftwidth=4
set expandtab
set softtabstop=4

" line numbers
set number

" bottom cmd
set showcmd

" redraw
set lazyredraw

" search
set incsearch
set hlsearch

" set scroll buffer
set scrolloff=20

" easier line navigation
nnoremap j gj
nnoremap k gk
nnoremap B ^
nnoremap E $
